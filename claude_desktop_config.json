{
  "mcpServers": {
    "opulent-lead-ingest": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://opulent-mcp-dev-lead-ingest.agreeablemeadow-00328895.australiaeast.azurecontainerapps.io/mcp",
        "--header",
        "Authorization:${AUTH_LEAD_INGEST}"
      ],
      "env": {
        "AUTH_LEAD_INGEST": "Bearer <MCP_API_KEY>"
      }
    },
    "opulent-zoho-sync": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://opulent-mcp-dev-zoho-sync.agreeablemeadow-00328895.australiaeast.azurecontainerapps.io/mcp",
        "--header",
        "Authorization:${AUTH_ZOHO_SYNC}"
      ],
      "env": {
        "AUTH_ZOHO_SYNC": "Bearer <MCP_API_KEY>"
      }
    },
    "n8n-workflows": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://chris-ml-s.app.n8n.cloud/mcp-server/http",
        "--header",
        "Authorization:${AUTH_N8N}"
      ],
      "env": {
        "AUTH_N8N": "Bearer <N8N_MCP_ACCESS_TOKEN>"
      }
    },
    "opulent-lead-ingest-local": {
      "disabled": true,
      "command": "<VENV_PATH>\\Scripts\\python.exe",
      "args": ["-m", "servers.lead_ingest"],
      "cwd": "<PROJECT_PATH>",
      "env": {
        "PGHOST": "",
        "PGPORT": "5432",
        "PGUSER": "opulent",
        "PGPASSWORD": "",
        "PGDATABASE": "property_db",
        "WORKFLOW_WEBHOOK_URL": "",
        "TWILIO_AUTH_TOKEN": "",
        "NOTION_WEBHOOK_SECRET": ""
      }
    },
    "opulent-zoho-sync-local": {
      "disabled": true,
      "command": "<VENV_PATH>\\Scripts\\python.exe",
      "args": ["-m", "servers.zoho_crm_sync"],
      "cwd": "<PROJECT_PATH>",
      "env": {
        "ZOHO_API_BASE": "https://www.zohoapis.com.au/crm/v2",
        "ZOHO_TOKEN_URL": "https://accounts.zoho.com.au/oauth/v2/token",
        "ZOHO_CLIENT_ID": "",
        "ZOHO_CLIENT_SECRET": "",
        "ZOHO_REFRESH_TOKEN": "",
        "ZOHO_ACCESS_TOKEN": "",
        "PROPERTY_DB_HOST": "",
        "PROPERTY_DB_PORT": "5432",
        "PROPERTY_DB_USER": "opulent",
        "PROPERTY_DB_PASSWORD": "",
        "PROPERTY_DB_NAME": "property_db"
      }
    }
  }
}
